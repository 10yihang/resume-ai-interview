# API密钥 (优先使用Grok3，如果没有则使用OpenAI)
GROK3_API_KEY=your_grok3_api_key_here
# Grok3 API URL (可选，如果不设置则使用默认值)
GROK3_API_URL=https://api.x.ai/v1

# 如果没有Grok3 API密钥，则使用OpenAI API密钥
# OPENAI_API_KEY=your_openai_api_key_here

# OCR配置 (用于从PDF和图像中提取文本)
OCR_SPACE_API_KEY=your_ocrspace_api_key_here
TESSERACT_PATH=tesseract
USE_OCR=true

# 服务器配置
PORT=8080

# 文件配置
MAX_FILE_SIZE=10485760
DATA_DIR=./data
